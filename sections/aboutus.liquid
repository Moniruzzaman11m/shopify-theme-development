
<div class="container">
    <div class="heading">
        <h1 class="text-center text-uppercase py-5">{{ section.settings.title }}</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            {% for block in section.blocks %}
            <div class="block_list">
                <h2>{{ block.settings.blockTitle }}</h2>
                <p>{{ block.settings.textContent }}</p>
            </div>
            {% endfor %}
        </div>
        <div class="col-md-6">
            {% for block in section.blocks %}
            <div class="block_list">
                <h2>{{ block.settings.blockTitleR }}</h2>
                <p>{{ block.settings.textContentR }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name" : "About Us",
    "settings" : [
        {
            "type" : "text",
            "id" : "title",
            "label" : "Title",
            "default" : "About Us"
        }
    ],
    "blocks" : [
        {
            "type" : "text_block",
            "name" : "Add left side new text block",
            "settings" : [
                {
                    "type" : "text",
                    "id" : "blockTitle",
                    "label" : "Block Title"
                },
                {
                    "type" : "textarea",
                    "id" : "textContent",
                    "label" : "Content Box"
                }
            ]
        }
    ],
    "blocks" : [
        {
            "type" : "text_block",
            "name" : "Add Right side new text block",
            "settings" : [
                {
                    "type" : "text",
                    "id" : "blockTitleR",
                    "label" : "Block Title"
                },
                {
                    "type" : "textarea",
                    "id" : "textContentR",
                    "label" : "Content Box"
                }
            ]
        }
    ]
}
{% endschema %}